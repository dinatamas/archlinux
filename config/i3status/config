# i3status configuration file.
# see "man i3status" for documentation.

general {
        colors = true
        interval = 30
}

order += "wireless _first_"
order += "battery all"
order += "cpu_temperature 0"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "%essid"
        format_down = "W: down"
}

battery all {
	last_full_capacity = true
        format = "%status %percentage"
	status_chr = "▲"
	status_bat = "▼"
	low_threshold = 20
}

cpu_temperature 0 {
	format = "%degrees °C"
}

memory {
        format = "%used"
        threshold_degraded = "1G"
        format_degraded = "%used"
}

tztime local {
        format = "%a >> %m.%d. %H:%M"
}
